$(document).ready(function() {

  if(parseInt($('.workaround').html()) === 0) {
    $('.dropdown-add-destination').show();
  }

  $('.prev-dest-btn').click(function() {

    if ($('#destination_id').val() !== "") {
      $('.submit-previous-destination').hide();
      $('.destination-section-heading').hide();
      $('.origin-section').show();
      $('.dropdown-add-origin').show();
      $('.submit-previous-origin').show();
      $('.origin-section-heading').show();

      if (parseInt($('.workaround').html()) > 0) {
        $('.dropdown-add-origin').hide();

      }
      else {
        $('.submit-previous-origin').hide();
        $('.origin-section-heading').hide();
      }
    }
  });

  $('.trigger-destination-dropdown').click(function() {

    $('.submit-previous-destination').hide();
    $('.destination-section-heading').hide();
    $('.dropdown-add-destination').show();

  });

  $('.add-destination-btn').click(function() {

    $('.dropdown-add-destination').hide();
    $('.origin-section').show();
    $('.dropdown-add-origin').show();
    $('.submit-previous-origin').show();
    $('.origin-section-heading').show();

    if (parseInt($('.workaround').html()) > 0) {
      $('.dropdown-add-origin').hide();
    }
    else {
      $('.submit-previous-origin').hide();
      $('.destination-section-heading').hide();
      $('.origin-section-heading').hide();
    }

  });

  $('.prev-origin-btn').click(function() {

    if ($('#origin_id').val() !== "") {
      $('.submit-previous-origin').hide();
      $('.origin-section-heading').hide();
      $('.ride-section').show();
    }

  });

  $('.trigger-origin-dropdown').click(function() {

    $('.submit-previous-origin').hide();
    $('.origin-section-heading').hide();
    $('.dropdown-add-origin').show();

  });

  $('.add-origin-btn').click(function() {

    $('.dropdown-add-origin').hide();
    $('.ride-section').show();

  });

  $('.back-prev-dest-btn').click(function() {

    $('.submit-previous-destination').show();
    $('.destination-section-heading').show();
    $('.dropdown-add-destination').hide();

  });

  $('.back-prev-origin-btn').click(function() {

    $('.submit-previous-origin').show();
    $('.origin-section-heading').show();
    $('.dropdown-add-origin').hide();

  });

  $('.back-to-origin').click(function(){

    $('.ride-section').hide();

    if($('#origin_address_line1').val() !== "" ||         $('#origin_address_line2').val() !== "" ||  $('#origin_city').val() !== "" || $('#origin_zip').val() !== "") {

      $('.dropdown-add-origin').show();
    }

    else {
      $('.submit-previous-origin').show();
      $('.origin-section-heading').show();
    }

  });

  $('.back-to-destination').click(function() {

    $('.submit-previous-origin').hide();
    $('.origin-section-heading').hide();

    if($('#destination_address_line1').val() !== "" || $('#destination_address_line2').val() !== "" ||  $('#destination_city').val() !== "" || $('#destination_zip').val() !== "" || $('#destination_name').val() !== "")   {

      $('.destination-section').show();
      $('.dropdown-add-destination').show();

    }

    else {

      $('.destination-section').show();
      $('.submit-previous-destination').show();
      $('.destination-section-heading').show();

    }

  });

});
