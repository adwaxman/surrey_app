<% @title = "driver login" %>
<h2>Driver login</h2>


  <div class="row">
    <div class="col s12 m10 offset-m1">
      <%= form_tag driver_login_path, method: :post do %>
        <div class="input-field">
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, class: 'validate'%>
        </div>
        <div class="input-field">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil %>
        </div>
        <p class="center">
          <%= submit_tag "Log In"%>
        </p>
      <% end %>
    </div>
  </div>
